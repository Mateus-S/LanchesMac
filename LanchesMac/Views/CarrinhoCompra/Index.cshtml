@model CarrinhoCompraViewModel

<div class="row form-check">
    <h2>Seu carrinho de Compras</h2>
    <h4>Aqui Estão os seus Pedidos</h4>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Quantidade</th>
                <th>Lanche</th>
                <th class="text-right">Preço</th>
                <th class="text-right">Subtotal</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CarrinhoCompra.CarrinhoCompraItens)

            {
                <tr>
                    <td class="text-center">@item.Quantidade</td>>
                    <td class="text-left">@item.Lanche.Nome</td>>
                    <td class="text-right">@item.Lanche.Preco</td>>
                    <td class="text-right">
                        @((item.Quantidade * item.Lanche.Preco).ToString("c")))
                    </td>
                    <td class="text-center"><a class="glyphicon glyphicon-remoce text-danger remove"></a></td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-lg-right">
                    Total:
                </td>
                <td class="text-lg-right">
                    @Model.CarrinhoCompraTotal.ToString("c")
                </td>
            </tr>
        </tfoot>

    </table>
    <div class="text-right">
        <div class="btn-group">
            <a class="btn btn-success" asp-controller="Pedido" asp-action="Checkout"> Encerrar Pedido</a>
            <a class="btn-group">
                <a class="btn btn-defaul dropdown-toggle" data-toggle="dropdown">
                    Adicionar mais Lanches <span class="caret"></span>
                </a>
                <ul class="dropdown-menu" role="menu">
                    <li>
                        <a asp-controller="Lanche" asp-action="List" asp-route-categoria="Normal"> Normal</a>
                        <a asp-controller="Lanche" asp-action="List" asp-route-categoria="Natural"> Natural</a>
                    </li>
                </ul>
            </a>
        </div>
    </div>

</div>